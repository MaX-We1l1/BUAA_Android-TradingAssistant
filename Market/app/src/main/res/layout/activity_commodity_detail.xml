<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="16dp">
    <ImageButton
        android:id="@+id/back_button"
        android:layout_width="48dp"
        android:layout_height="34dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="9dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:background="?attr/selectableItemBackground"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_return" />

    <TextView
        android:id="@+id/commodity_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <!--    <TextView-->
    <!--        android:id="@+id/commodity_price"-->
    <!--        android:layout_width="wrap_content"-->
    <!--        android:layout_height="wrap_content"-->
    <!--        android:textColor="@android:color/darker_gray"-->
    <!--        android:textSize="14sp"-->
    <!--        android:layout_marginBottom="8dp" />-->
    <EditText
        android:id="@+id/commodity_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:enabled="false"
        android:layout_marginBottom="8dp" /><!--初始为不可编辑-->

    <ImageView
        android:id="@+id/commodity_image"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:layout_marginBottom="8dp" />

    <!--    <TextView-->
    <!--        android:id="@+id/commodity_description"-->
    <!--        android:layout_width="wrap_content"-->
    <!--        android:layout_height="wrap_content"-->
    <!--        android:textColor="@android:color/darker_gray"-->
    <!--        android:textSize="14sp"-->
    <!--        android:layout_marginBottom="8dp" />-->
    <EditText
        android:id="@+id/commodity_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:lines="3"
        android:enabled="false"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/commodity_seller"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="卖家: "
        android:layout_marginBottom="8dp" />

    <Button
        android:id="@+id/button_want"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="联系商家"
        android:layout_gravity="center" />

    <Button
        android:id="@+id/button_add_to_hobby"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="收藏商品"
        android:layout_gravity="center" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <Button
            android:id="@+id/button_buy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="立即购买"
            android:layout_gravity="center" />

        <com.example.myapplication.InputNumberView
            android:id="@+id/commodity_buy_num"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_toEndOf="@id/button_buy"
            android:layout_centerVertical="true"
            android:ellipsize="end"
            android:maxLines="1"
            app:btnTextSize="14sp"
            app:btnWidth="36dp"
            app:tvWidth="50dp"
            tools:ignore="MissingClass" />
    </RelativeLayout>

    <Button
        android:id="@+id/button_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="保存修改"
        android:layout_gravity="center"
        android:visibility="gone"/>

    <Button
        android:id="@+id/button_edit_commodity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="编辑商品"
        android:visibility="gone"/> <!-- 默认隐藏 -->


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <!-- ImageButton，位于最左侧 -->
        <ImageButton
            android:id="@+id/button_cart"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_cart"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:contentDescription="购物车"
            android:scaleType="fitCenter"
            android:background="?attr/selectableItemBackground" />

        <!-- Button，位于ImageButton的右侧 -->
        <Button
            android:id="@+id/button_add_to_cart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/button_cart"
            android:layout_centerVertical="true"
            android:text="加入购物车" />

        <!-- InputNumberView，位于Button的右侧 -->
        <com.example.myapplication.InputNumberView
            android:id="@+id/commodity_num"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_toEndOf="@id/button_add_to_cart"
            android:layout_centerVertical="true"
            android:ellipsize="end"
            android:maxLines="1"
            app:btnTextSize="14sp"
            app:btnWidth="36dp"
            app:tvWidth="50dp"
            tools:ignore="MissingClass" />

        <TextView
            android:id="@+id/commodity_already_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/commodity_num"
            android:text="已添加: 0" />
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="评论列表"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:layout_margin="16dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/comment_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        android:clipToPadding="false" />

</LinearLayout>